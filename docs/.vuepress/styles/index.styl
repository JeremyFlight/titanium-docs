/* purgecss start ignore */
@tailwind base
@tailwind components
/* purgecss end ignore */
@tailwind utilities

@import base
@import buttons

body
  overflow-x hidden

.landing
  .content:not(.custom)
    > *:first-child
      margin-top 0
  .navbar
    display flex
    align-items center
    justify-content: space-between
    transition background-color .3s ease, border-color .3s ease, heigth .3s ease
    .links
      position relative
      top 0
      background-color transparent

  .navbar:not(.scrolling)
    background-color transparent
    border-color transparent
    height 6rem

    .sidebar-button
      top 1.75rem

    .links
      .nav-item
        > .nav-link
          color: #fff
      .dropdown-title
        .title
          color: #fff
      .repo-link
        color: #fff
        .icon
          &.outbound
            color: #fff

  .content:not(.custom)
    max-width none
    padding 0
    margin 0

.search-box
  input
    color $black !important
  .suggestion
    a
      color $black !important
    &.focused
      background-color $secondary-ltr !important
      a
        color $accentColor !important

@media (prefers-color-scheme: dark) {
  html, body, header, .navbar .links, .dropdown-wrapper .nav-dropdown, .sidebar,
  .content-sidebar-wrapper {
    background-color: #25272a !important;
  }

  h1, h2, h3, h4, strong, .navbar .site-name, .dropdown-wrapper .dropdown-title, .nav-links a,
  body, .sidebar-heading, a.sidebar-link, a.content-sidebar-link {
    color: #eee !important;
  }

  .content code {
    background-color: #444  !important;
    color: #eee !important;
  }

  .navbar, .sidebar, .content-sidebar, .content-sidebar-links {
    border-color: #444 !important;
  }


  .docs-card {
    background-color: #000 !important;
    header {
      background: transparent !important;
    }
  }

  .custom-block.warning, div[class*="language-"], div[class*="language-"] code {
    background-color: #000 !important;
  }
}
